<!-- expenses.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Show Expenses</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f5f5f5;
        }

        h1 {
            text-align: center;
            /* color: #007bff; */
            background-color: gray;
            margin-bottom: 20px;
            height: 60px;
        }

        form {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 10px;
        }

        select, input[type="text"], input[type="number"] {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button[type="submit"], a {
            padding: 8px 12px;
            background-color:red;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

        button[type="submit"]:hover, a:hover {
            background-color: #0056b3;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            table-layout: fixed;
            height: fit-content;
        }

        table, th, td {
            border: 1px solid #ccc;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #09893c;
        }

        .total {
            font-weight: bold;
            text-align: center;
            margin-top: 20px;
            font-size: 18px;
        }

        .total span {
            color: red;
        }

        thead tr {
            background-color: #4caf50;
            color: rgb(19, 19, 19);
        }

        tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
     <h1>Show Expenses</h1>
    <form id="expenses-form" method="post" action="/showexpense"> 
        <label for="category">Yours Expenses</label>
        <select id="category" name ="category"> 
            <option value="All">All</option>
            <!-- <option value="Food">Food</option>
            <option value="Entertainment">Entertainment</option>
            <option value="Travel">Travel</option> -->
            
         </select> 
        <button type="submit" id="submit" name="category">Submit</button> 
        <a href="http://localhost:8000/">Add New Task</a>
    </form>
    <table align="center" id="expenses-table">
        <thead>
            <tr>
                <th>Category</th>
                <th>Description</th>
                <th>Price</th>
                <th>Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% let totalAmount=0 %>
            <% expenses.forEach(expense => { %>
                <tr>
                    <td><%= expense.category %></td>
                    <td><%= expense.description %></td>
                    <td><%= expense.price %></td>
                    <td><%= expense.date %></td>
                    <td>
                        <form class="actions-form" action="/delete" method="post">
                            <input type="hidden" name="expenseId" value="<%= expense._id %>">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                    <% totalAmount=totalAmount+ expense.price %>
                </tr>
            <% })%>
        </tbody>
    </table>
    <div class="total">
        Total: <span><%= totalAmount %></span>
    </div>
</body>
</html>